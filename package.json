{
    "name": "vscode-janus-debug",
    "displayName": "JavaScript Remote Debugger for JANUS Apps",
    "description": "Debug your JANUS-based applications in Visual Studio Code",
    "version": "0.0.2",
    "publisher": "otris-software",
    "author": {
        "name": "otris software",
        "email": "kircher@otris.de"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/otris/vscode-janus-debug"
    },
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onCommand:extension.vscode-janus-debug.provideInitialConfigurations",
        "onCommand:extension.vscode-janus-debug.askForSourceFile"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "breakpoints": [
            {
                "language": "javascript"
            }
        ],
        "debuggers": [
            {
                "type": "janus",
                "label": "JANUS Debugger",
                "program": "./out/src/debugSession.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "script",
                            "host",
                            "port"
                        ],
                        "properties": {
                            "script": {
                                "type": "string",
                                "description": "The script you want to debug."
                            },
                            "host": {
                                "type": "string",
                                "description": "IP address or name of the host where you want to run the script.",
                                "default": "localhost"
                            },
                            "port": {
                                "type": "number",
                                "description": "The port on which the target server listens.",
                                "default": 10000
                            },
                            "timeout": {
                                "type": "number",
                                "description": "Time in ms until we give up trying to connect.",
                                "default": 6000
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically pause script after launch.",
                                "default": false
                            },
                            "log": {
                                "type": "object",
                                "description": "Lets you configure diagnostic logging of the debug adapter.",
                                "properties": {
                                    "fileName": {
                                        "type": "string",
                                        "description": "The name of the logfile.",
                                        "default": "${workspaceRoot}/vscode-janus-debug.log"
                                    },
                                    "logLevel": {
                                        "type": "object",
                                        "description": "The minimum loglevel(s) for messages written to the logfile.",
                                        "properties": {
                                            "default": {
                                                "type": "string",
                                                "enum": [
                                                    "Debug",
                                                    "Info",
                                                    "Warn",
                                                    "Error"
                                                ],
                                                "description": "The default loglevel."
                                            }
                                        },
                                        "additionalProperties": {
                                            "type": "string",
                                            "enum": [
                                                "Debug",
                                                "Info",
                                                "Warn",
                                                "Error"
                                            ]
                                        },
                                        "default": {
                                            "default": "Debug"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "host",
                            "port"
                        ],
                        "properties": {
                            "host": {
                                "type": "string",
                                "description": "IP address or name of the host where the application runs on.",
                                "default": "localhost"
                            },
                            "port": {
                                "type": "number",
                                "description": "The debug port to attach to.",
                                "default": 8089
                            },
                            "timeout": {
                                "type": "number",
                                "description": "Time in ms until we give up trying to connect.",
                                "default": 6000
                            },
                            "log": {
                                "type": "object",
                                "description": "Lets you configure diagnostic logging of the debug adapter.",
                                "properties": {
                                    "fileName": {
                                        "type": "string",
                                        "description": "The name of the logfile.",
                                        "default": "${workspaceRoot}/vscode-janus-debug.log"
                                    },
                                    "logLevel": {
                                        "type": "object",
                                        "description": "The minimum loglevel(s) for messages written to the logfile.",
                                        "properties": {
                                            "default": {
                                                "type": "string",
                                                "enum": [
                                                    "Debug",
                                                    "Info",
                                                    "Warn",
                                                    "Error"
                                                ],
                                                "description": "The default loglevel."
                                            }
                                        },
                                        "additionalProperties": {
                                            "type": "string",
                                            "enum": [
                                                "Debug",
                                                "Info",
                                                "Warn",
                                                "Error"
                                            ]
                                        },
                                        "default": {
                                            "default": "Debug"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "initialConfigurations": "extension.vscode-janus-debug.provideInitialConfigurations"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "tsc -p ./ && mocha --timeout 10000 -u tdd out/test/",
        "lint": "tslint src/*.ts test/*.ts",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "@types/uuid": "^2.0.29",
        "uuid": "^2.0.3",
        "vscode-debugprotocol": "^1.14.0",
        "vscode-debugadapter": "^1.14.0"
    },
    "devDependencies": {
        "typescript": "^2.1.4",
        "tslint": "^4.1.1",
        "vscode": "^1.0.3",
        "mocha": "^2.4.5",
        "vscode-debugadapter-testsupport": "^1.14.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.33"
    }
}
