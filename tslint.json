{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "quotemark": [
      "single"
    ],
    "no-console": [
      false
    ],
    "no-bitwise": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-classes-per-file": [
      false
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "object-literal-sort-keys": false,
    "arrow-parens": false,
    "only-arrow-functions": [
      false
    ],
    "trailing-comma": [
      false // this sucks
    ],
    "max-line-length": [
      180 // I think the screens today are big enough to display more than 120 characters
    ]
  }
}
